<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="stock_view_form" model="ir.ui.view">
        <field name="name">stock.order.form</field>
        <field name="model">stock.delivery</field>
        <field name="arch" type="xml">
            <form string="Stock Order">
                <header>
                    <button name="action_validate" string="Validate" type="object" class="btn-success" />
                    <button name="action_draft" string="Set Draft" type="object" class="btn-warning" />
                    <button name="action_stock_delivery" string="delivery" type="object" class="btn-success" />
                    <field name="state" widget="statusbar" statusbar_visible="delivery,draft,validate" />
                </header>
                <sheet>
                    <group>
                        <field name="customer_id" />
                        <field name="delivery_date" />
                    </group>
                    <notebook>
                        <page string="Delivery Lines">
                            <field name="delivery_line_ids">
                                <tree editable="bottom">
                                    <field name="medicine_id" />
                                    <field name="demand_qty" />
                                    <field name="done_qty" />
                                    <field name="subtotal" readonly="1" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_stock_delivery" model="ir.actions.act_window">
        <field name="name">Stock Order</field>
        <field name="res_model">stock.delivery</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_stock_delivery" name="Stock Deliveruy" parent="my_parent_menu" action="action_stock_delivery" sequence="10" />
</odoo>
